<Window x:Class="CensoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CensoreApp"
        mc:Ignorable="d"
        Title="Цензурим вашу строку" Height="250" Width="400" MinHeight="250" MaxHeight="450" MinWidth="400" MaxWidth="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите строку, которую нужно зацензурить:"> </TextBlock>
            <TextBox x:Name="TextString"></TextBox>
            <TextBlock Text="Введите слово, которое нужно зацензурить:"></TextBlock>
            <TextBox x:Name="TextStringToCensore"></TextBox>
            <Button x:Name="CensoreButton" Content="Зацензурить" BorderThickness="1" Background="Azure" Height="40" Click="CensoreButton_Click"></Button>
            <TextBlock Text="Ваша строка:"></TextBlock>
            <TextBlock x:Name="CensoredString"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
